<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/tradingcard_background_gradient">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tradingcard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/pokÃ©dex_red_dark"
        android:elevation="4dp"
        android:textAlignment="center"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ImageView
        android:id="@+id/tradingcard_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="7"
        />


    <LinearLayout
        android:id="@+id/tradingcard_weight_height_layout"
        style="@style/tradingCard_ll"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tradingcard_height"
            style="@style/tradingCard_textViewMeasurements"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/tradingcard_weight"
            style="@style/tradingCard_textViewMeasurements"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tradingcard_ablility_layout"
        style="@style/tradingCard_ll"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tradingcard_ab1"
            style="@style/tradingCard_textViewAbilities"
            />

        <TextView
            android:id="@+id/tradingcard_ab2"
            style="@style/tradingCard_textViewAbilities" />
    </LinearLayout>


</LinearLayout>