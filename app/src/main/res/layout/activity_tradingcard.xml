<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/tradingcard_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="5" />



    <LinearLayout
        android:id="@+id/tradingcard_weight_height_layout"
        style="@style/tradingCard_ll"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tradingcard_height"
            style="@style/tradingCard_textView"  />

        <TextView
            android:id="@+id/tradingcard_weight"
            style="@style/tradingCard_textView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tradingcard_ablility_layout"
        style="@style/tradingCard_ll"
        android:layout_weight="3">

        <TextView
            android:id="@+id/tradingcard_ab1"
            style="@style/tradingCard_textView"  />

        <TextView
            android:id="@+id/tradingcard_ab2"
            style="@style/tradingCard_textView" />
    </LinearLayout>


</LinearLayout>