<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/tradingcard_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3" />


    <LinearLayout
        android:id="@+id/tradingcard_name_id_layout"
        style="@style/tradingCard_ll">

        <TextView
            android:id="@+id/tradingcard_id"
            style="@style/tradingCard_textView"/>

        <TextView
            android:id="@+id/tradingcard_name"
            style="@style/tradingCard_textView"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tradingcard_weight_height_layout"
        style="@style/tradingCard_ll">

        <TextView
            android:id="@+id/tradingcard_height"
            style="@style/tradingCard_textView"  />

        <TextView
            android:id="@+id/tradingcard_weight"
            style="@style/tradingCard_textView" />
    </LinearLayout>


</LinearLayout>